.item { display: flex; flex-direction: row; flex-wrap: nowrap; justify-content: space-around;margin: 10rpx;padding-top:20rpx;  border-top:1px dashed #b9b9b9;
height:172rpx;font-size:12px;
}
.item .item_title{font-size:14px;color:#000;margin-bottom:16rpx;}
