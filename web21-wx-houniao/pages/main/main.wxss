@import "/templates/mainswiper/mainswiper.wxss";
.sousuo-btn{position: fixed; top:40rpx; left:40rpx;width: 100rpx; height: 100rpx;border-radius: 50%; background:rgba(242,242,242,.95);z-index:100; text-align: center; line-height:100rpx;color:#000;}
.sousuo-btn .main-sousuo{font-size:30px;}
.title-img{width: 100%; height:194rpx; }
