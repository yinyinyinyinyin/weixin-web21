<view class="list">
  <block wx:if="{{listArr.length}}">
    <view wx:for="{{listArr}}" class="list-item" wx:key="id">
      <view class="list-con">{{item.content}}</view>
      <view class="list-time">创建时间：{{item.time}}</view>
    </view>
  </block>
  <view wx:else>记事本很纯洁，需要你点击添加按钮！</view>  
</view>
